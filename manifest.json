  {
    "manifest_version": 3,
    "name": "Hate Speech Filter",
    "version": "1.0",
    "description": "Masque les commentaires de discours haineux sur TikTok.",
    "permissions": ["activeTab"],
    "background": {
        "service_worker": "background.js" 
    },
    "content_scripts": [
        {
            "matches": ["*://www.tiktok.com/*"], 
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}

  